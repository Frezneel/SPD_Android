<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.spdapps.Activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nav_upper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:foregroundGravity="bottom"
            android:background="@color/prussian_blue_3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:text="@string/judul"
                android:layout_gravity="left|center"
                android:gravity="left|center"
                android:fontFamily="@font/roboto_medium"
                android:textStyle="normal"
                android:textSize="18sp"
                android:textColor="@color/white"
                />

        </com.google.android.material.bottomnavigation.BottomNavigationView>

        <FrameLayout
            android:id="@+id/fr_show"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_dark_bg"
            android:text="Isi Konten"
            />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/dashboard_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:foregroundGravity="bottom"
            android:background="@color/white"
            app:itemIconTint="@color/prussian_blue_4"
            app:itemTextColor="@color/prussian_blue_5"
            app:menu="@menu/dashboard_menu"
            />
    </LinearLayout>

</RelativeLayout>